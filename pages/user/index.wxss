.user {
  background-color: #f1f1f1;
  height: 100vh;
}
.user .user_top {
  position: relative;
  padding-top: 25vw;
}
.user .user_top .back {
  position: absolute;
  left: -50vw;
  top: -75vw;
  width: 200vw;
  height: 100vw;
  background-color: var(--themeColor);
  border-radius: 50%;
}
.user .user_top .login {
  transform: translateY(-95rpx);
  padding-top: 55rpx;
}
.user .user_top .login button {
  background-color: white;
  width: 195rpx;
  border-radius: 55rpx;
}
.user .user_top .userInfo {
  padding: 0 40vw;
  text-align: center;
  transform: translateY(-75rpx);
}
.user .user_top .userInfo image {
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
}
.user .user_content {
  padding: 0 15rpx;
}
.user .user_content .top {
  display: flex;
  text-align: center;
  transform: translateY(-35rpx);
}
.user .user_content .top .item {
  flex: 1;
}
.user .user_content .top .num {
  color: var(--price);
}
.user .user_content .top .text {
  font-size: 25rpx;
}
.user .user_content .my_order {
  display: flex;
  flex: auto;
  flex-wrap: wrap;
  text-align: center;
  background-color: white;
  border-radius: 35rpx;
  font-size: 25rpx;
}
.user .user_content .my_order .order_title {
  width: 100%;
  text-align: left;
  padding: 15rpx 25rpx;
  font-weight: 999;
}
.user .user_content .my_order .iconfont {
  font-size: 45rpx;
  color: var(--price);
}
.user .user_content .my_order .item {
  flex: 1;
  padding-bottom: 15rpx;
}
.user .user_content .other {
  margin-top: 45rpx;
}
.user .user_content .other view {
  background-color: white;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
}
.user .user_content .other view text {
  float: right;
  color: #9e9e9e;
}
.user .user_content .other view .iconfont {
  font-size: 45rpx;
}
